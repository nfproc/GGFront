<Window x:Class="GGFront.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GGFront"
        mc:Ignorable="d"
        Title="Setting" Height="200" Width="525" MinHeight="200" MinWidth="525" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:VHDLVersionConverter x:Key="VHDLVersionConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="100"/>
                <ColumnDefinition Width="Auto" MinWidth="70"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto" MinWidth="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="GHDL" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28" Width="43"/>
            <Label Content="GTKWave" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Height="28" Width="66"/>
            <TextBox Grid.Column="2" VerticalAlignment="Center" Margin="0,2" Height="24"
                     Text="{Binding GHDLPath, Mode=TwoWay}"/>
            <TextBox Grid.Column="2" VerticalAlignment="Center" Grid.Row="1" Margin="0,2" Height="24"
                     Text="{Binding GTKWavePath, Mode=TwoWay}"/>
            <Button x:Name="btnGHDLPathSearch" Content="..." Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Click="PathSearch_Click" Margin="5,2,0,2" Height="24" Width="19"/>
            <Button x:Name="btnGTKWavePathSearch" Content="..." Grid.Column="3" HorizontalAlignment="Left"
                    Click="PathSearch_Click" Grid.Row="1" Margin="5,2,0,2" VerticalAlignment="Center" Height="24" Width="19"/>
            <CheckBox Content="Guess" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="18" Width="52"
                      IsChecked="{Binding GuessGHDLPath}"/>
            <CheckBox Content="Guess" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="18" Width="52"
                      IsChecked="{Binding GuessGTKWavePath}" Grid.Row="1"/>
        </Grid>
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="100"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="VHDL Version" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28"/>
            <RadioButton Content="Guess" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                         IsChecked="{Binding VHDLStd, Converter={StaticResource VHDLVersionConverter}, Mode=TwoWay, ConverterParameter=0}"/>
            <RadioButton Content="VHDL-93" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                         IsChecked="{Binding VHDLStd, Converter={StaticResource VHDLVersionConverter}, Mode=TwoWay, ConverterParameter=1993}"/>
            <RadioButton Content="VHDL-2008" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center"
                         IsChecked="{Binding VHDLStd, Converter={StaticResource VHDLVersionConverter}, Mode=TwoWay, ConverterParameter=2008}"/>
        </Grid>
        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="1" Width="60" Height="24" Margin="10,0,10,0"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OK_Click"/>
            <Button Content="Cancel" Grid.Column="2" Width="60" Height="24" Margin="10,0,10,0"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
